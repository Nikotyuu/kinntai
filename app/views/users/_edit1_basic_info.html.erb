<% provide(:class_text, 'basic1-info') %>
<% provide(:button_text, '更新') %>

<div class="modal-dialog modal-lg modal-dialog-center">
  <div class="modal-content">
    <div class="modal-header">
      <button type="button" class="close" data-dismiss="modal" aria-label="Close">
        <span aria-hidden="true">&times;</span>
      </button>
      <h1 class="modal-title">【残業申請】</h1>
    </div>
    <div class="modal-body">
      <div class="row">
        <div class="col-md-10 col-md-offset-1">
          <%= form_with(model: @user, url: update_basic1_info_user_path(@user), local: true, method: :patch) do |f| %>
            <%= render 'shared/error_messages', object: @user %>
            <table class="table table-bordered table-condensed user-table">
              <thead>
                <tr>
                  <th>日付</th>
                  <th>曜日</th>
                  <th>終了予定時間</th>
                  <th>翌日</th>
                  <th>業務処理内容</th>
                  <th>指示者確認㊞</th>
                </tr>
                <tr>
                  <td></td>
                  <td></td>
                  <td></td>
                  <td><%= f.check_box :next_day %></td>
                  <td><%= f.text_field :process, class: "form-control" %></td>
                  <td><%= f.collection_select :name, User.where(superior: true), :name, :name, :prompt => "上長を選択してください" %></td>
                </tr>
              </thead>
            </table>

            <div class="modal-footer">
              <%= f.submit "変更を送信する", class: "btn btn-primary btn-lg btn-#{yield(:class_text)} form-control" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
