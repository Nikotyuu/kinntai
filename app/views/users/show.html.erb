<% provide(:title, @user.name) %>
<div>
  <table class="table table-bordered table-condensed user-table">
    <tr>
      <td><%= link_to "←", user_path(date: @first_day.prev_month), class: "btn btn-info" %>　【<%= l(@first_day, format: :middle) %>】勤怠管理表　<%= link_to "→", user_path(date: @first_day.next_month), class: "btn btn-info" %></td>
      <td>指定勤務時間：<%= format_basic_info(@user.basic_time) %>
        <br>指定勤務終了時間：<%= format_basic_info(@user.work_time) %></br>
      </td>
      <td colspan = "3">基本時間：<%= format_basic_info(@user.basic_time) %></td>
      <td>月初日：<%= l(@first_day, format: :short) %></td>
    </tr>
    <tr>
      <td>所属：<%= @user.department.present? ? @user.department : "未所属" %></td>
      <td>名前：<%= @user.name %></td>
      <td>コード</td>
      <td></td>
      <td>出勤日数: <%= @worked_sum %>日</td>
      <td>月末日：<%= l(@last_day, format: :short) %></td>
    </tr>
  </table>
</div>

<div>
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【所属長承認申請のお知らせ】", edit3_basic_info_user_path(@user), remote: true, class: "btn1" %>
    <% end %>
    </h4>
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【勤怠変更申請のお知らせ】", edit2_basic_info_user_path(@user), remote: true, class: "btn1" %>
    <% end %>  
    </h4>
  <h4>
    <% if current_user.superior? && !current_user?(@users) %>
      <%= link_to "【残業申請のお知らせ】", edit4_basic_info_user_path(@user), remote: true, class:"btn1" %>
    <% end %>  
    </h4>
</div>

<div>
  <%= link_to "勤怠を編集", attendances_edit_one_month_user_path(date: @first_day), class: "btn btn-primary" %>
  <%= link_to "CSV出力", "", class: "btn btn-primary" %>
  <h5><%= link_to "勤怠修正ログ（承認済）", users_kintaihensyuu_path,class: "btn btn-primary" %></h5>
  
</div>

<div>
  <table class="table table-bordered table-condensed table-hover" id="table-attendances">
    <thead>
      <tr>
        <th rowspan = "4">残業申請</th>
        <th rowspan = "4">日付</th>
        <th rowspan = "4">曜日</th>
      </tr>
    <thoot>
      <tr>
        <th colspan = "8">【実績】</th>
        <th colspan = "6">【所定外勤務】</th>
      </tr>
    </thoot>
      <tr>
        <th colspan = "3">出勤</th>
        <th colspan = "3">退勤</th>
        <th rowspan = "2">在社時間</th>
        <th rowspan = "2">備考</th>
        <th colspan = "2">終了予定時間</th>
        <th rowspan = "2">時間外時間</th>
        <th rowspan = "2">業務処理内容</th>
        <th rowspan = "2">指示者確認㊞</th>
      </tr>
      <tr>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
        <th></th>
        <th>時</th>
        <th>分</th>
      </tr>
    </thead>

    <tbody>
      <% @attendances.each do |day| %>
        <tr>
          <td><%= link_to "残業申請", edit1_basic_info_user_path(@user), remote: true, class: "btn btn-primary" %></td>
          <td><%= l(day.worked_on, format: :short) %></td>
          <td>
            <% if day.worked_on.wday == 6 %>
              <font color="Blue"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% elsif day.worked_on.wday == 0 %>
              <font color="Red"><%= $days_of_the_week[day.worked_on.wday] %></font>
            <% else %>
              <%= $days_of_the_week[day.worked_on.wday] %>
            <% end %>
          <td><%= format_hour(day.started_at) if day.started_at.present? %></td>
          <td><%= format_min(day.started_at)  if day.started_at.present? %></td>
          <td>
            <% if btn_text = attendance_state(day) %>
              <%= link_to "#{btn_text}", user_attendance_path(@user, day), method: :patch, class: "btn btn-primary btn-attendance" %>
            <% end %>
          </td>
          <td><%= format_hour(day.finished_at) if day.finished_at.present? %></td>
          <td><%= format_min(day.finished_at)  if day.finished_at.present? %></td>
          <td></td>
          <td>
            <% if day.started_at.present? && day.finished_at.present? %>
              <%= str_times = working_times(day.started_at.floor_to(15.minutes), day.finished_at.floor_to(15.minutes)) %>
              <% @total_working_times = @total_working_times.to_f + str_times.to_f %>
            <% end %>
          </td>
          <td><%= day.note %></td>
          <!-- 終了予定時間 -->
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
      <% end %>
    </tbody>
        <tfoot>
        <!--rowspan:縦結合、 colspan: 横結合-->
      <tr>
        <td></td>
        <td colspan="2"><%= format_basic_info(@user.work_time).to_f * @worked_sum %></td>
        <td colspan="6"></td>
        <td><%= format("%.2f", @total_working_times.to_f) %></td>
        <td colspan="5"></td>
        <td>所属長承認&emsp;<br>
        </td>
      </tr>
    </tfoot>
  </table>
</div>

